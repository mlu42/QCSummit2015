<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
android:background="@color/lightAqua"
    android:fillViewport="true"
    android:id="@+id/first_page">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/aqua"

            android:layout_margin="20px">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/profile"
                    android:layout_margin="20px"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Little Catcomm"
                    android:textSize="15pt"
                    android:layout_margin="20px"/>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Current Career Path: Senior Electrical Engineer"
                    android:layout_margin="10px"/>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Career Expertise: Level 10"
                    android:layout_margin="10px"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Career Package number: 6"
                    android:layout_margin="10px"/>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Projects number: 6"
                    android:layout_margin="10px"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Following: 19"
                    android:layout_margin="10px"/>



                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="20px"
                    android:background="@drawable/riazon"/>




                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Personality index: 167"
                    android:layout_margin="10px"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Recommendation Career: Engineer, Product Manager, Data Analyist"
                    android:layout_margin="10px"/>



            <Button
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Social Room"
                    android:layout_margin="20px"
                    android:id="@+id/btnsocial"
                    android:layout_gravity="center_horizontal"
                    android:layout_centerVertical="true"/>

        </LinearLayout>




    </LinearLayout>

</ScrollView>