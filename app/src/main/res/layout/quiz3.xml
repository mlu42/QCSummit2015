<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/green"
    android:fillViewport="true"
    android:id="@+id/first_page">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >
        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Incorrect.
Correct Answer Was:"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/lightgreen"

            android:layout_margin="20px">
            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Graphic Designer"
                android:textAppearance="?android:attr/textAppearanceLarge" />


            //android:id="@+id/buttonGroup1"
            //android:layout_width="match_parent"
            //android:layout_height="wrap_content"
            //android:layout_weight="0.04" >
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/lightgreen"

            android:layout_margin="20px">
            <TextView
                android:id="@+id/paragraph0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="I create visual concepts, by hand or using computer software, to communicate ideas that inspire and inform. I develop creative layouts and production design for advertisements, brochures, magazines, and corporate reports."/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="30px">
            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next"/>



        </LinearLayout>


    </LinearLayout>

</ScrollView>


